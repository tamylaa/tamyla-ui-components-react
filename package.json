{
  "name": "@tamyla/ui-components-react",
  "version": "1.0.0",
  "description": "React-based UI component library with Factory Bridge pattern - integrates with @tamyla/ui-components",
  "type": "module",
  "main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "scripts"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "rollup -c",
    "clean": "rimraf dist",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish --tag latest",
    "analyze": "npm run build && npx bundle-analyzer dist/index.esm.js",
    "validate": "node scripts/basic-validate.js",
    "status": "node scripts/repo-status.js",
    "certify": "node scripts/working-certify.js",
    "complete": "node scripts/complete-automation.js",
    "certify-comprehensive": "node scripts/comprehensive-certify.js",
    "certify-zero-issues": "node scripts/comprehensive-certify.js",
    "quick-certify": "node scripts/working-certify.js",
    "deploy": "node scripts/deploy-to-github.js"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@tamyla/ui-components": "^2.0.0",
    "framer-motion": "^10.16.16",
    "react-redux": "^9.0.4",
    "redux-persist": "^6.0.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@storybook/addon-essentials": "^7.6.5",
    "@storybook/react": "^7.6.5",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.9.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "styled-components",
    "redux",
    "atomic-design",
    "factory-bridge",
    "ui-components-react"
  ],
  "author": "Tamyla Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamylaa/ui-components-react"
  },
  "bugs": {
    "url": "https://github.com/tamylaa/ui-components-react/issues"
  },
  "homepage": "https://ui-react.tamyla.com"
}
